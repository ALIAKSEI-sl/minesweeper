{
  "root": true,
  "env": {
    "browser": true
  },
  "ignorePatterns": ["dist/**/*"],
  "extends": ["eslint-config-airbnb-base"],
  "rules": {
    "no-param-reassign": "off",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "operator-linebreak": ["error", "after"],
    "no-alert": "off",
    "no-restricted-globals": "off"
  }
}
